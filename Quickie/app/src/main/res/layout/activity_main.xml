<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fname"
        android:paddingTop="70px"
        android:paddingLeft="70px"
        android:paddingBottom="70px"
        android:textSize="50px"
        android:id="@+id/fname"
        />
    <EditText
        android:layout_toRightOf="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="70px"
        android:textSize="50px"
        android:hint="Firstname"
        android:id="@+id/ftxt"
        />

    <TextView
        android:id="@+id/lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lname"
        android:layout_below="@+id/fname"
        android:paddingTop="70px"
        android:paddingLeft="70px"
        android:paddingBottom="70px"
        android:textSize="50px"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ftxt"
        android:layout_toRightOf="@+id/fname"
        android:padding="70px"
        android:textSize="50px"
        android:hint="Lastname"
        android:id="@+id/ftxt1"
        />
    <TextView
        android:id="@+id/mname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mname"
        android:layout_below="@+id/lname"
        android:paddingTop="70px"
        android:paddingLeft="70px"
        android:paddingBottom="70px"
        android:textSize="50px"


        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ftxt1"
        android:layout_toRightOf="@+id/mname"
        android:padding="70px"
        android:textSize="50px"
        android:hint="Firstname"
        android:id="@+id/ftxt2"
        />
    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fname"
        android:layout_below="@+id/mname"
        android:paddingTop="70px"
        android:paddingLeft="70px"
        android:paddingBottom="70px"
        android:textSize="50px"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ftxt2"
        android:layout_toRightOf="@+id/mail"
        android:padding="70px"
        android:textSize="50px"
        android:hint="Firstname"
        android:id="@+id/ftxt3"
        />
    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_below="@+id/mail"
        android:gravity="center"
        android:paddingTop="70px"
        android:paddingLeft="70px"
        android:paddingBottom="70px"
        android:textSize="45px"

        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:textSize="20sp"
        android:layout_marginLeft="400px"
        android:id="@+id/male"
        android:text="male"
        >
    </RadioButton>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:layout_toRightOf="@id/male"
        android:textSize="20sp"
        android:layout_marginLeft="40px"
        android:id="@+id/female"
        android:text="Female"
        >
    </RadioButton>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="40sp"
        android:layout_below="@id/male"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:padding="10dp"
        >
    </Button>
</RelativeLayout>